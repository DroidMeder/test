<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">


    <androidx.cardview.widget.CardView
        android:id="@+id/cw_1"
        android:layout_width="@dimen/view_width_41dp"
        android:layout_height="@dimen/view_height_48dp"
        app:cardCornerRadius="@dimen/corner_radius_12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:cardBackgroundColor="@color/gray_5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <EditText
            android:id="@+id/et_otp1"
            style="@style/"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:maxLength="1"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:inputType="number"

            />
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvOTP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:itemCount="4"
        tools:listitem="@layout/item_recycler_custom"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        android:layout_marginStart="@dimen/margin_24dp"
        android:layout_marginEnd="@dimen/margin_24dp"
        app:layout_constraintTop_toTopOf="parent" >

    </androidx.recyclerview.widget.RecyclerView>





</androidx.constraintlayout.widget.ConstraintLayout>