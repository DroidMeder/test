<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/timer_wrapper"
    android:layout_width="@dimen/view_328dp"
    android:layout_height="@dimen/view_52dp"
    android:background="@drawable/background_toast_loading"
    android:elevation="@dimen/elevation_1dp">

    <TextView
        android:id="@+id/toastTimer"
        android:layout_width="@dimen/view_height_10dp"
        android:layout_height="@dimen/view_height_13dp"
        android:layout_marginStart="@dimen/margin_19dp"
        android:layout_marginTop="@dimen/margin_19dp"
        android:layout_marginBottom="@dimen/margin_20dp"
        android:text="@string/_5"
        android:textAlignment="center"
        android:textSize="@dimen/text_10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="@dimen/view_28dp"
        android:layout_height="@dimen/view_28dp"
        android:layout_marginStart="@dimen/margin_10dp"
        android:layout_marginTop="@dimen/margin_12dp"
        android:layout_marginBottom="@dimen/margin_14dp"
        android:indeterminateDrawable="@drawable/theme_progress_bar_for_toast"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/toastTimerMessage"
        android:layout_width="@dimen/view_160dp"
        android:layout_height="@dimen/view_14dp"
        android:layout_marginStart="@dimen/margin_10dp"
        android:layout_marginTop="@dimen/margin_19dp"
        android:layout_marginBottom="@dimen/margin_19dp"
        android:textColor="@color/black_1"
        android:textFontWeight="400"
        tools:targetApi="p"
        android:textSize="@dimen/text_12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/progressBar2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/toastTimerButton"
        android:layout_width="@dimen/view_100dp"
        android:layout_height="@dimen/view_30dp"
        android:layout_marginTop="@dimen/margin_11dp"
        android:layout_marginEnd="@dimen/margin_11dp"
        android:layout_marginBottom="@dimen/margin_11dp"
        android:background="@color/white"
        android:text="@string/button"
        android:textColor="@color/blue_1"
        android:textSize="@dimen/text_16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>